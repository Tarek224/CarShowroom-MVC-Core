                            </div>

                            <!-- item gallery sidebar -->
                            <div class="wrap-item-gallery m-b-10">
                                <a class="item-gallery bg-img1" href="~/images/BMW6.jpg" data-lightbox="gallery"
                                   style="background-image: url('/images/BMW6.jpg');"></a>
                            </div>

                            <!-- item gallery sidebar -->
                            <div class="wrap-item-gallery m-b-10">
                                <a class="item-gallery bg-img1" href="~/images/Marcedes1.jpg" data-lightbox="gallery"
                                   style="background-image: url('/images/Marcedes1.jpg');"></a>
                            </div>

                            <!-- item gallery sidebar -->
                            <div class="wrap-item-gallery m-b-10">
